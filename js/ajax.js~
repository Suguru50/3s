$(function() {
	$("#shadow").css({
		opacity: '0.7',
		display: 'none',
		position: 'absolute',
		top: '0',
		width: '100%',
		height: '100%',
		background: '#000',
		zIndex: '1'
	});
	
	$('#text_enterbutton').click(function() {
		$("#shadow").css('display', 'block');
		$.ajax({
			type: 'POST',
			url: 'canvas.html',
			dataType: 'html',
			success: function(data) {

				$('#article').html(data);
			    var Cso_msg = $("#text_room").val(); //取得
				var Cso_user = $("#text_userArea").val(); //取得
				$("#text_room").val(""); //空白にする
				$("#text_userArea").val(""); //空白にする
				toolSetUp();
				canvasSetUp();
				textChatSetUp();
				enterRoom(Cso_msg,Cso_user);
			},error:function() {
				alert('error');
			}
		});
	});
});


function mousePointer(pointer){
	switch(pointer){
		case 1:
			//AUTO
			if(animation)
				brushcatcher.style.cursor = "auto";
			break;
		case 2:
			//DEFAULT
				brushcatcher.style.cursor = "default";
			break;
		case 3:
			//CROSSHAIR
				brushcatcher.style.cursor = "crosshair";
			break;
		case 4:
			//MOVE
				brushcatcher.style.cursor = "move";
			break;

	}
}
